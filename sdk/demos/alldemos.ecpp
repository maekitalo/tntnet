<%pre>
#include <fstream>
</%pre>
<%config>
std::string filename = "/usr/share/tntnet/demos.txt";
</%config>
<%cpp>

std::ifstream demos(filename.c_str());

</%cpp>
<html>
 <head>
  <style type="text/css">
   table {
     width: 100%;
     border: 3px solid black;
     padding: 0;
     border-spacing: 0;
   }
   th {
     border: 1px solid black;
     border-bottom: 2px solid black;
     background-color: #ffe;
   }
   td {
     border: 1px solid black;
     padding-left: 3;
     padding-right: 10;
     padding-top: 1;
     padding-bottom: 1;
   }
  </style>
 </head>
 <body>
  <h1>Tntnet-demos-page</h1>
  <table style="border: 1px solid black">
   <tr>
    <th>Demo</th>
    <th>Desciption</th>
   </tr>
<{
  while (demos)
  {
    // read line
    std::string line;
    getline(demos, line);

    // find delimiters '|'
    std::string::size_type n0 = line.find('|');
    if (n0 == std::string::npos)
      continue;
    std::string::size_type n1 = line.find('|', n0 + 1);
    if (n1 == std::string::npos)
      continue;

    // extract parts
    std::string url(line, 0, n0);
    std::string name(line, n0 + 1, n1 - n0 - 1);
    std::string description(line, n1 + 1);

    // skip empty urls and lines starting with '#'
    if (url.empty() || line[0] == '#')
      continue;
}>
   <tr>
    <td>
     <a href="<$ url $>"><$ name $></a>
    </td>
    <td>
     <$ description $>
    </td>
   </tr>
% }
  </table>
 </body>
</html>
